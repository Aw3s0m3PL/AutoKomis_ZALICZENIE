@model AutoKomis_ZALICZENIE.Models.KomisModel

@{
    ViewData["Title"] = "Tworzenie ogłoszenia";
}

<style>
    .back a {
        font-size: 30px;
        color: gray;
        margin-left: 10px;
    }

    input[type=text] {
        display: block;
        width: 100%;
        height: calc(1.5em + 0.75rem + 2px);
        padding: 0.375rem 0.75rem;
        font-size: 1rem;
        font-weight: 400;
        line-height: 1.5;
        color: #495057;
        background-color: #fff;
        background-clip: padding-box;
        border: 2px solid gray;
        border-radius: 0.25rem;
        transition: border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
    }

    select {
        display: block;
        width: 100%;
        height: calc(1.5em + 0.75rem + 2px);
        padding: 0.375rem 0.75rem;
        font-size: 1rem;
        font-weight: 400;
        line-height: 1.5;
        color: #495057;
        background-color: #fff;
        background-clip: padding-box;
        border: 2px solid gray;
        border-radius: 0.25rem;
        transition: border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
    }
</style>

<h1>Formularz dodawania ogłoszenia.</h1>

<h4>Komis samochodowy.</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TytOglo" class="control-label">Tytuł ogłoszenia</label>
                <input asp-for="TytOglo" />
                <span asp-validation-for="TytOglo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TypNadwozia" class="control-label">Typ nadwozia</label>
                <select asp-for="TypNadwozia">
                    <option value="Coupe">Coupe</option>
                    <option value="Kabriolet">Kabriolet</option>
                    <option value="Kombi">Kombi</option>
                    <option value="Kompakt">Kompakt</option>
                    <option value="Sedan">Sedan</option>
                    <option value="SUV">SUV</option>
                    <option selected="selected" value="Inne">Inne</option>
                </select>
                <span asp-validation-for="TypNadwozia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Marka" class="control-label">Marka</label>
                <input asp-for="Marka" />
                <span asp-validation-for="Marka" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Model" class="control-label">Model</label>
                <input asp-for="Model" />
                <span asp-validation-for="Model" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cena" class="control-label">Cena</label>
                <input type="text" asp-for="Cena" />
                <span asp-validation-for="Cena" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RokProd" class="control-label">Rok produkcji</label>
                <input type="text" asp-for="RokProd" />
                <span asp-validation-for="RokProd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RodzPaliwa" class="control-label">Rodzaj paliwa</label>
                <select asp-for="RodzPaliwa">
                    <option value="Benzyna">Benzyna</option>
                    <option value="Diesel">Diesel</option>
                    <option value="Gaz">Gaz</option>
                    <option value="Elektryczny">Elektryczny</option>
                    <option value="Hybryda">Hybryda</option>
                </select>
                <span asp-validation-for="RodzPaliwa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PojSil" class="control-label">Pojemność silnika (cm<sup>3</sup>)</label>
                <input type="text" asp-for="PojSil" />
                <span asp-validation-for="PojSil" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Przebieg" class="control-label">Przebieg</label>
                <input type="text" asp-for="Przebieg" />
                <span asp-validation-for="Przebieg" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Kategoria" class="control-label">Kategoria</label>
                <select asp-for="Kategoria">
                    <option value="3">Osobowe</option>
                    <option value="1">Dostawcze/Ciężarowe</option>
                    <option value="2">Motocykle/Quady</option>
                </select>
                <span asp-validation-for="Kategoria" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Opis" class="control-label">Opis</label>
                <input asp-for="Opis" />
                <span asp-validation-for="Opis" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Zdjecie" class="control-label">URL zdjęcia</label>
                <input asp-for="Zdjecie" />
                <span asp-validation-for="Zdjecie" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Dodaj" class="styleButton" />
            </div>
        </form>
    </div>
</div>

<div class="back">
    <a asp-action="Index"><i class="fas fa-angle-double-left"></i></a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
